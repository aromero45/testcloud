<div class="container p-4">
    <div class="row">
      {{#if isLogged}}
        {{#each videos}}
            <div class="col-md-3">
                <div class="card-body">
                  <a href="/{{this.original_video}}" target="_blank">
                      <h3 class="card-title text-uppercase">
                            {{this.name}} {{this.last_name}}
                      </h3>
                  </a>
                  <p>{{this.email}}</p>
                  <p>Estado: {{this.status}}</p>
                  {{#ifEquals this.status "Convertido"}}
                    <div>
                        <video width="320" height="240" controls>
                          <source src="/uploads/{{this.contest_id}}/inicial/{{this.original_video}}" type="video/mp4">
                          <!---<source src="movie.ogg" type="video/ogg">
                        Your browser does not support the video tag.--->
                        </video> 
                    </div>
                  {{/ifEquals}}
                  {{else}}
                  <p>Video todavia no convertido a formato</p>
                  {{/else}}
                </div>
            </div>
        {{/each}}
      {{else}}
        {{#each videos}}
           <div class="col-md-3">
               <div class="card-body">
                 <a href="/{{this.original_video}}" target="_blank">
                     <h3 class="card-title text-uppercase">
                          {{this.name}} {{this.last_name}}
                     </h3>
                 </a>
                 <p>{{this.email}}</p>
                 <div>
                    <video width="320" height="240" controls>
                      <source src="/uploads/{{this.contest_id}}/inicial/{{this.original_video}}" type="video/mp4">
                      <!---<source src="movie.ogg" type="video/ogg">
                    Your browser does not support the video tag.--->
                    </video> 
                 </div>
               </div>
           </div>
        {{/each}}
      {{/if}}
        {{#if url}}
        <br><br><br>
        <div class="col-md-6"> 
            <div class="card card-body text-center">
              <p>Agregar video </p>
              {{log 'videos' url}}
              <a href="/videos/add/{{this.url}}">Subir un video al concurso</a>
        </div>
        {{/if}}
    </div>
</div>